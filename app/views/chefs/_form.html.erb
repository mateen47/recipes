
<div class="row">

	<div class="col-md-12" style="padding-left: 300px">
	<%= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |f| %>

		<div class="form-group" >
			<div class="control-label col-md-2">
				<%=f.label :chefname %>
			</div>
			<div class="col-md-8">
				<%= f.text_field :chefname, class: "form-control", placeholder: "Enter Your Name", autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-md-2">
				<%= f.label :email %>
			</div>
			<div class="col-md-8">
				<%= f.text_area :email, rows: 1, class: "form-control",placeholder: "Enter Email" %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-md-2">
				<%= f.label :password %>
			</div>
			<div class="col-md-8">
				<%= f.password_field :password, rows: 1, class: "form-control",placeholder: "Choose a password" %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-md-8">
				<%= f.label :password_confirmation, "Confirm Password" %>
			</div>
			<div class="col-md-8">
				<%= f.password_field :password_confirmation, rows: 1, class: "form-control",placeholder: "Confirm the password" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<%= f.submit "Create my account", class: "btn btn-primary btn-lg btn-xlarge" %>
			</div>
		</div>
	<% end %>
	<div class="colormatch" style="padding-left: 15px">
		[ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
	</div>
	<br><br><br><br>
	</div>
</div>
