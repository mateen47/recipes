<%= render 'shared/page_title', title: "showing all chefs" %>

 <div class="digg_pagination" style="padding-left: 450px;">
    <%= will_paginate %>
 </div>
<div align="center">
	<% @chefs.each do |chef| %>
		<ul class="listing">
			<div class="row" style="padding-left: 450px;">
				<div class="well col-md-4 col-md-offset-4" style=" background-color: #eee;">	
					<br>		
					<li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
					<li class="chef-title"><%= link_to chef.chefname.capitalize, chef_path(chef) %></li>
					<li><small><%= pluralize(chef.recipes.count, "recipe") if chef.recipes %></small></li>
					<% if logged_in? && current_chef.admin? && current_chef!=chef %>
						<li><%= link_to "Delete this chef", chef_path(chef), method: :delete %></li>
					<% end %>
				</div>
			</div>
		</ul>
	<% end %>
</div>
 <div class="digg_pagination" style="padding-left: 450px;">
    <%= will_paginate %>
 </div>

