
<% obj.each do |recipe| %>
	<div class="row">
		<div class="col-md-2">
			<section class="center chef_info">
				<%= link_to gravatar_for(recipe.chef, size: 120), chef_path(recipe.chef) %>
			</section>
		</div>

		<div class="col-md-8 well bg">
			<br>
			<h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
			<p><%= truncate(recipe.description, length: 150) %></p>
			<p>
				<span class="quiet"><small>Created  <%= time_ago_in_words(recipe.created_at) %>  ago</small></span>
			</p>
			<% if logged_in? && current_chef==recipe.chef %>
				<%= link_to "Edit this recipe", edit_recipe_path(recipe), class: "btn btn-xs btn-warning " %>
				<%= link_to "Delete this recipe", recipe_path(recipe), method: :delete, class: "btn btn-xs btn-danger", data: { confirm: "Are you sure you want to delete this recipe?"} %><br><br>
			<% end %>
		</div>
		
		<div class="col-md-8 well ">
			<br>
		</div>
	</div>
	
<% end %>